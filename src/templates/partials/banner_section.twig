 <section class="banner">
            <h1 class="banner__title">{{ index.banner.heading.part_1 }} <span class="banner__title-highlighted">{{ index.banner.heading.part_2 }}</span> {{ index.banner.heading.part_3 }}</h1>
            <p class="banner__description">{{ index.banner.text }}</p>
            <p>
                <span class="banner__counter">{{ index.banner.counter_1.number }}</span>
                <span class="banner__subtext">{{ index.banner.counter_1.text }}</span>
            </p>
            <p>
                <span class="banner__counter">{{ index.banner.counter_2.number }}</span>
                <span class="banner__subtext">{{ index.banner.counter_2.text }}</span>
            </p>
            <picture>
                <source srcset="{{ index.banner.promo.image_path }}{{ index.banner.promo.image_src_small }}" type="image/png">
                <source srcset="{{ index.banner.promo.image_path }}{{ index.banner.promo.image_src_big }}" type="image/png">
                <img src="{{ index.banner.promo.image_path }}{{ index.banner.promo.image_src_small }}" width="534px" height="642px" alt="{{ index.banner.promo.image_alt }}">
            </picture>
            <a href="#" class="button button--secondary button--large">{{ index.banner.connect_button }}</a>
            <a href="#" class="button button--primary button--large">{{ index.banner.whitelist_button }}</a>
        </section>
        